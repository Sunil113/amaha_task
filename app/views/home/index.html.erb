<style>
  body {
    margin: 0;
    font-family: Arial, sans-serif;
    background-color: #f8f9fa;
  }

  .navbar {
    background-color: #c54818b8;
    padding: 20px 20px;
  }

  .navbar-brand {
    color: #fff;
    font-size: 20px;
    font-weight: bold;
    text-decoration: none;
    width: 50%;

  }

  .navbar-nav {
    margin-left: auto;
    width: 50%;
    display: flex;
    justify-content: space-evenly;
    margin-left: auto;
    width: 50%;   
  }

  .navbar-nav .nav-item {
    margin-left: 10px;
  }

  .navbar-nav .nav-item:last-child {
    margin-right: 0;
  }

  .navbar-nav .nav-link {
  	text-decoration: none;
    color: #fff;
  }

  .navbar-nav .nav-link:hover {
    color: #f0f0f0;
  }

  .navbar .btn {
    margin-left: 10px;
  }

  .sign-in-container {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
  }
  .container{
  	display: flex;
  }

  .sign-in-form {
    background-color: #fff;
    padding: 30px;
    border-radius: 10px;
    box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
    max-width: 400px;
    width: 100%;
    text-align: center;
  }

  .sign-in-form h1 {
    color: #007bff;
    margin-bottom: 20px;
  }

  .sign-in-form button {
    background-color: #007bff;
    color: #fff;
    padding: 10px 20px;
    border: none;
    border-radius: 25px;
    cursor: pointer;
    transition: background-color 0.3s ease;
    font-size: 16px;
    font-weight: bold;
  }

  .sign-in-form button:hover {
    background-color: #0056b3;
  }

  .sign-in-form .alert {
    padding: 10px;
    border-radius: 5px;
    margin-bottom: 10px;
  }

  .sign-in-form .alert-success {
    background-color: #d4edda;
    color: #155724;
    border: 1px solid #c3e6cb;
  }

  .sign-in-form .alert-danger {
    background-color: #f8d7da;
    color: #721c24;
    border: 1px solid #f5c6cb;
  }
</style>

<% if user_signed_in? %>
  <nav class="navbar navbar-expand-lg navbar-dark">
    <div class="container">
      <a class="navbar-brand" href="#">Welcome To My Page!!</a>
      <div class="navbar-nav ml-auto">
        <a class="nav-link" href="<%= new_task_path %>">Create New Task</a>
        <a class="nav-link" href="<%= tasks_path %>">All Tasks</a>
<button class="btn btn-danger" type="button" style="background-color: #d9534f; border-color: #d9534f; color: #fff;">Sign Out</button>

      </div>
    </div>
  </nav>
<% else %>
  <div class="sign-in-container">
    <div class="sign-in-form">
      <h1>Welcome to Ahama!</h1>
      <%= button_to "Sign In", new_user_session_path, style: "background-color: #287ea7; color: #fff; padding: 12px 25px; border: none; border-radius: 25px; cursor: pointer; font-size: 16px; font-weight: bold; transition: background-color 0.3s ease;" %>
    </div>
  </div>
<% end %>
