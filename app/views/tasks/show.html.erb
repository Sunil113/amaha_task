<style>
  body {
    font-family: Arial, sans-serif;
    background-color: #f5f5f5;
    padding: 20px;
  }

  h1 {
    color: #333;
    margin-bottom: 20px;
  }

  .task-info {
    background-color: #fff;
    padding: 20px;
    border-radius: 5px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
  }

  p {
    margin-bottom: 10px;
  }

  strong {
    font-weight: bold;
    margin-right: 5px;
  }

  .deadline {
    font-weight: bold;
    color: #4CAF50;
  }

  .actions {
    margin-top: 20px;
  }

  .actions a {
    text-decoration: none;
    padding: 5px 10px;
    border-radius: 3px;
    color: #333;
    background-color: #e0e0e0;
    margin-right: 10px;
  }

  .actions a:hover {
    background-color: #bdbdbd;
  }
</style>

<div class="task-info">
  <h1><%= @task.title %></h1>
  <p><strong>Description:</strong> <%= @task.description %></p>
  <p><strong>Status:</strong> <%= @task.status.humanize.capitalize %></p>
  <p><strong>Deadline:</strong> <span class="deadline"><%= @task.deadline.strftime("%Y-%m-%d %H:%M") %></span></p>
  <div class="actions">
    <%= link_to "Edit", edit_task_path(@task) %>
    <%= link_to "Back", tasks_path %>
  </div>
</div>